<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron para calcular KPIs diariamente -->
        <record id="ir_cron_calculate_daily_kpi" model="ir.cron">
            <field name="name">SPT Cash Flow: Calcular KPIs Diarios</field>
            <field name="model_id" ref="model_financial_kpi"/>
            <field name="state">code</field>
            <field name="code">model.create_daily_kpi()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <!-- numbercall eliminado para Odoo 18 -->
            <field name="active" eval="True"/>
            <!-- doall eliminado para Odoo 18 -->
            <field name="nextcall">2026-01-02 02:00:00</field>
        </record>
    </data>
</odoo>
